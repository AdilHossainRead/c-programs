
#include<stdio.h>
int result,sum=0,n;
void print_number_1_to_n(int n)
{
    if(n==0)
        return;
    else
    {
        print_number_1_to_n(n-1);
        printf(" %d",n);
        sum+=n;
    }

}
int factorial(int data)
{
    if(data <=1)
    {
        return 1;
    }
    else
    {
        return data*factorial(data-1);
    }


}int sum_of_digits(int sum)
{
    if(n==0)
        return 0;
    else
    {
        int result=sum%10+sum_of_digits(sum/10);
        return result;
    }

}
int number_of_digit(int sum)
{
    if(sum==0)
        return 0;
    else
    {
        return 1+number_of_digit(sum/10);
    }
}
int power(int a, int b) {
    if (b == 0) return 1;
    return a * power(a, b - 1);
}
int main()
{
    int number;
    printf("Enter the nunber:");
    scanf("%d",&number);
    print_number_1_to_n(number);
    printf("sum of digit: %d",sum_of_digits(sum));
    printf("number of digit:%d",number_of_digit(sum));
    printf("number of sum 1 to n: %d\n",sum);
    printf("factorial is : %d\n",factorial(5));
    prinf("power :%d",power(5,6));

}
