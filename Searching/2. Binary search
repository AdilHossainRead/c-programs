#include<stdio.h>
int binary_search(int arr[],int n,int key)
{
    int lower_index=0;
    int higher_index=n-1;
    while(lower_index<=higher_index)
    {
       int mid=(lower_index+higher_index)/2;
       if(arr[mid]==key)
       {
           return mid;
       }
       else if((arr[mid]>key))
       {
           higher_index=mid-1;
       }
       else if((arr[mid]<key))
       {
           lower_index=mid+1;
       }

    }
    return -1;


}
int main()
{
    int n,key;
    printf("Enter the size of array n= ");
    scanf("%d",&n);
    int arr[n];
    printf("Enter the value of array= ");
    for(int i=0;i<n;i++)
    {
        scanf("%d",&arr[i]);
    }
    printf("Enter the searching key= ");
    scanf("%d",&key);
    int result=binary_search(arr,n,key);
    if(result==-1)
    {
        printf("key does not found.");
    }
    else
    {
        printf("value was found %d th index",result);
    }
}

